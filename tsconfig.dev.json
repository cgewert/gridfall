{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "ESNext",                     
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,                     
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "sourceMap": true,                      
    "noImplicitAny": true,
    "removeComments": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
